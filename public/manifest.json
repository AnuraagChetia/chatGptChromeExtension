{
  "name": "KlimbB Bot",
  "description": "Chat with an AI Bot",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "KlimbB Bot",
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "128": "logo192.png"
    }
  },
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
